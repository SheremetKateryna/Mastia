mixin ability_item 
            .ability_item
               each item in abilityItem
                  h2.h2.h2__short=item.header
                  p.ability_text=item.text1
                  p.ability_text=item.text2
                  

mixin ability
   .layout_section
      .ability
         .layout_row
            .layout_col-2
               img.ability_img(src='img/ability.png', alt='')
            .layout_col-2
               +ability_item 
               button.button(type='submit') OUR SERVICES
